<Window x:Class="WpfStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Button Background="White" MinWidth="100">1</Button>
        <Button Background="Blue" MinWidth="100">1</Button>
        <Button Background="Red" MinWidth="100">1</Button>
        <StackPanel>
            <Button Background="White" MinHeight="100" MinWidth="500">1</Button>
            <Button Background="Blue" MinHeight="100" MinWidth="500">1</Button>
            <Button Background="Red" MinHeight="100" MinWidth="500">1</Button>
        </StackPanel>
    </StackPanel>
</Window>
